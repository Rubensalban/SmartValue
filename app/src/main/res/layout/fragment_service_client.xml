<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color"
    android:orientation="vertical"
    tools:context=".fragments.ServiceClientFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@color/purple_700">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_smatvalue" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_call"
                        android:layout_gravity="center"
                        app:tint="@color/purple_700" />

                    <LinearLayout
                        android:id="@+id/layout_mtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/_10sdp">
                        <ImageView
                            android:background="?actionBarItemBackground"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone_tel"
                            android:scaleType="centerInside"
                            app:tint="@color/purple_700" />
                        <TextView
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06 400 46 46"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17ssp"
                            android:textColor="@color/black_acsent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_airtel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_marginTop="@dimen/_10dp">
                        <ImageView
                            android:background="?actionBarItemBackground"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone_tel"
                            android:scaleType="centerInside"
                            app:tint="@color/purple_700" />
                        <TextView
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05 077 44 44"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_17ssp"
                            android:textColor="@color/black_acsent"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nous_suivre_sur"
                                android:textSize="@dimen/_12ssp"
                                android:layout_gravity="center"/>
                            <ImageView
                                android:id="@+id/btn_whatsapp"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:background="?actionBarItemBackground"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:src="@drawable/ic_whatsapp"
                                android:scaleType="centerInside"/>
                            <ImageView
                                android:id="@+id/btn_facebook"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/ic_facebook"
                                android:scaleType="centerInside"/>
                            <ImageView
                                android:id="@+id/btn_instagramm"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/ic_instagram"
                                android:scaleType="centerInside"/>
                            <ImageView
                                android:id="@+id/btn_youtube"
                                android:layout_width="@dimen/_22sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:background="?actionBarItemBackground"
                                android:src="@drawable/ic_youtube"
                                android:scaleType="centerInside"/>
                        </LinearLayout>
                        <View
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="@dimen/_135sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_height="1dp"
                            android:background="@color/grey_20"/>
                    </LinearLayout>

                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_9ssp"
                        android:text="@string/service_disponible_7_jours_7"/>

                    <ImageView
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_maji"
                        android:scaleType="centerInside"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_10sdp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>